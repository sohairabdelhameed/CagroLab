<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Almarai:wght@300;400;700;800&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <nav class="navbar navbar-expand-lg fixed-top p-5">
        <div class="container-fluid">
            <a class="navbar-brand me-auto" href="#">
                <img style="height:80px;" src="~/images/LogoNew.png" alt="" />
            </a>

            <div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                    <div>
                        <img src="~/images/navlogo.png" alt="" />
                    </div>
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                    <ul class="navbar-nav justify-content-center flex-grow-1 pe-3">
                        <li class="nav-item">
                            <a asp-controller="Home" asp-action="Index" class="nav-link mx-lg-2">Home</a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="Package" asp-action="Index" class="nav-link mx-lg-2">Packages</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link mx-lg-2" href="#">About</a>
                        </li>



                        <li class="nav-item">
                            <a class="nav-link mx-lg-2" href="#">Contract</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav justify-content-center flex-grow-1 pe-3 me-2">
                        <li class="nav-item d-flex align-items-center">
                            <a class="nav-link d-flex align-items-center" href="#">
                                <span>عربي</span>
                                <svg color="#21D8B3" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-globe ms-2" viewBox="0 0 16 16">
                                    <path d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m7.5-6.923c-.67.204-1.335.82-1.887 1.855A8 8 0 0 0 5.145 4H7.5zM4.09 4a9.3 9.3 0 0 1 .64-1.539 7 7 0 0 1 .597-.933A7.03 7.03 0 0 0 2.255 4zm-.582 3.5c.03-.877.138-1.718.312-2.5H1.674a7 7 0 0 0-.656 2.5zM4.847 5a12.5 12.5 0 0 0-.338 2.5H7.5V5zM8.5 5v2.5h2.99a12.5 12.5 0 0 0-.337-2.5zM4.51 8.5a12.5 12.5 0 0 0 .337 2.5H7.5V8.5zm3.99 0V11h2.653c.187-.765.306-1.608.338-2.5zM5.145 12q.208.58.468 1.068c.552 1.035 1.218 1.65 1.887 1.855V12zm.182 2.472a7 7 0 0 1-.597-.933A9.3 9.3 0 0 1 4.09 12H2.255a7 7 0 0 0 3.072 2.472M3.82 11a13.7 13.7 0 0 1-.312-2.5h-2.49c.062.89.291 1.733.656 2.5zm6.853 3.472A7 7 0 0 0 13.745 12H11.91a9.3 9.3 0 0 1-.64 1.539 7 7 0 0 1-.597.933M8.5 12v2.923c.67-.204 1.335-.82 1.887-1.855q.26-.487.468-1.068zm3.68-1h2.146c.365-.767.594-1.61.656-2.5h-2.49a13.7 13.7 0 0 1-.312 2.5m2.802-3.5a7 7 0 0 0-.656-2.5H12.18c.174.782.282 1.623.312 2.5zM11.27 2.461c.247.464.462.98.64 1.539h1.835a7 7 0 0 0-3.072-2.472c.218.284.418.598.597.933M10.855 4a8 8 0 0 0-.468-1.068C9.835 1.897 9.17 1.282 8.5 1.077V4z" />
                                </svg>
                            </a>
                        </li>

                        <li class="nav-item d-flex align-items-center m-auto">
                            <input type="text" placeholder="search" class="form-control" />
                            <img src="~/images/Search.png" alt="search" class="ms-2" />
                        </li>
                    </ul>


                </div>
            </div>



            <div class="dropdown">
                @if (Context.Session.GetString("Username") != null)
                {
                    <button class="btn dropdown-toggle" style="background-color:transparent" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/images/User.png" alt="User Icon" class="icon-image" /> @Context.Session.GetString("Username")
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        @* Check if the user is a Lab based on session data *@
                        @{
                            var isLab = Context.Session.GetString("IsLab");
                            bool isLabBoolean = !string.IsNullOrEmpty(isLab) && bool.Parse(isLab);
                        }
                        @if (isLabBoolean)
                        {

                            <button class="btn dropdown-item" style="color: black;" type="button" data-bs-toggle="modal" data-bs-target="#createAccountModal">
                                Add new account
                                
                            </button>
                        }
                        <li><a class="dropdown-item" href="#">Edit Profile</a></li>
                        <li>
                            <form asp-controller="Accounts" asp-action="Logout" method="post" style="display:inline;">
                                <button type="submit" class="dropdown-item">Logout</button>
                                @Html.AntiForgeryToken()
                            </form>
                        </li>
                    </ul>
                }
                else
                {
                    <a href="@Url.Action("Login", "Accounts")" class="login-button">Login <i class="bi bi-door-open"></i></a>
                }
            </div>


            <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>


        </div>
    </nav>


    <div>
        <main role="main" class="pb-3 " style="padding-top: 100px;">
            @RenderBody()
        </main>
    </div>

    <footer class="footer mt-auto py-3">
        <div class="container text-center">
            <div class="wrapper">
                <section class="content-footer">
                    <div class="right-section">
                        <img src="~/images/logo-footer_121208.png" alt="" style="width:120px;height:125px" />
                    </div>
